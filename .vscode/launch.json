    "version": "0.2.0",
    "configurations": [
        {
            // tested to be good
            "name": "Python Debugger: One Source",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
        },
        {
            // tested to be good 
            "name": "Python Debugger: poetry102.fast:app",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "args": [
                "poetry102.fast:app",
                "--host", "0.0.0.0",
                "--port", "8000",
                "--reload"
            ],"env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
        },
        {
            "name": "Python Debugger: One Test",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            // tested to be good 
            "name": "Python Debugger: All Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        }
    ]
}